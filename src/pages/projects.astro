---
import ProjectsGrid from "../components/ProjectsGrid.astro";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

const projects = [
  {
    name: "Northline Express",
    description:
      "One of 8 sites I rebuilt and helped migrate from Magento 1 to Big Commerce for Online stores.",
    link: "https://www.northlineexpress.com/",
  },
  {
    name: "Jared Makes",
    description:
      "This very site, be sure to check it out on Google Page Speed Insights using the link below.",
    link: "https://pagespeed.web.dev/report?url=https%3A%2F%2Fjaredmakes.com%2F",
  },
  {
    name: "Tiger-Hunt",
    description:
      "A conversion of a static HTML site to a fully functional WordPress site.",
    link: "https://gunstockwood.com/",
  },
  {
    name: "Amazon Alexa",
    description:
      "I assisted on a series of projects for Voice Focused, a company that focused on disrupting the voice assistant market.",
    link: "https://vimeo.com/309762069?embedded=true&source=vimeo_logo&owner=93600914",
  },
  {
    name: "Magic 8 Ball",
    description:
      "One of the fist things I ever built that wasn't a static site. I built this as a way to try some cool CSS (at the time)",
    link: "https://codepen.io/JaredsPens/pen/pLqqaY",
  },

  {
    name: "Super Secret Mystery Project",
    description:
      "It's such a well kept secret that I don't even know what it is.",
    link: "#",
  },
];

const description = "I've worked on everything from very basic static HTML sites to coin mining apps on Alexa (Amazon did not like that one), to voice ordering KFC via Alexa, to some killer e-commerce sites. Be sure to check back, as I've always got something cooking.";
---


<Layout title="Projects" description={description}>
  <Header
    title="Projects"
    subtitle="Web & Voice"
    description={description}
    image="/images/magic8ball.webp"
  />
  <main class="px-8 pt-16 mx-auto max-w-6xl sm:pt-24 lg:px-16">
    <ProjectsGrid projects={projects} />
  </main>
</Layout>
